<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Used on the activity_main.xml layout
    -->

    <!--Spacing used around the recycler inside the MainActivity -->
    <dimen name="recycler_spacing">8dp</dimen>

    <!-- The padding for the bottom of the empty state group view-->
    <dimen name="empty_state_bottom_padding">172dp</dimen>

    <!-- The padding for the start of the empty state group view-->
    <dimen name="empty_state_start_padding">56dp</dimen>

    <!-- The padding for the end of the empty state group view-->
    <dimen name="empty_state_end_padding">56dp</dimen>

    <!-- Dimensions of the image in the Empty State GroupView-->
    <dimen name="empty_state_image_dimension">48dp</dimen>

    <!-- The padding the Group View that
         contains the text of the Empty state-->
    <dimen name="EmptyStateText_GV_top_padding">16dp</dimen>
    <dimen name="EmptyStateText_GV_bottom_padding">56dp</dimen>

    <!-- The dimensions for the empty state title-->
    <dimen name="empty_state_title_textsize">16sp</dimen>
    <dimen name="empty_state_title_padding">8dp</dimen>

    <!-- The Top padding of the empty state subtitle-->
    <dimen name="empty_state_subtitle_padding">4dp</dimen>

    <!-- The textSize of the refresh textView-->
    <dimen name="refresh_textView_textsize">12sp</dimen>

</resources>